{
    "name": "Copy as code block",
    "displayName": "Copy as code block",
    "description": "This is an extension for copying code with a filename in a code block when creating a prompt.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.74.0"
    },
    "icon": "images/icon.png",
    "publisher": "noricha",
    "repository": "https://github.com/noricha-vr/CopyAsCodeBlock",
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.copyAsCodeBlock",
                "title": "Copy as code block"
            }
        ],
        "keybindings": [
            {
                "command": "extension.copyAsCodeBlock",
                "key": "cmd+c cmd+c",
                "mac": "cmd+c cmd+c",
                "when": "editorTextFocus && !editorReadonly"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint \"src/**/*.ts\"",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.83.0",
        "@types/mocha": "^10.0.2",
        "@types/node": "18.x",
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.3",
        "eslint": "^8.50.0",
        "glob": "^10.3.3",
        "mocha": "^10.2.0",
        "typescript": "^5.2.2",
        "@vscode/test-electron": "^2.3.4"
    }
}
